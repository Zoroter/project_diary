<h1 class="text-center mt-4">Create new Subject</h1>
  <div class="container mt-4">
    <%= form_for @subject do |f| %>

      <form>
        <div class="form-group row">
          <%= f.label :name, class: "col-2" %>
          <%= f.text_field :name, class: "col-5" %>
        </div>
        <div class="form-group row">
          <%= f.label :teacher_id, "Teacher", class: "col-2 mt-4" %>
          <%= f.collection_select(:teacher_id, Teacher.all, :id, :id_full_name,
          {prompt: "Make your selection from the list below"},{size: 4, class: "custom-select shadow rounded col-5" })%>
        </div>
        <div class="form-group row">
          <%= f.label :group_id, "Class", class: "col-2 mt-4" %>
          <%= f.collection_select(:group_id, Group.all, :id, :name,
          {prompt: "Make your selection from the list below"},{size: 4, class: "custom-select shadow rounded col-5" })%>
        </div>
        <div class="form-group row">
          <%= f.label "Times per week", class: "col-2" %>
          <%= f.text_field :times, class: "col-3" %>
        </div>

      <button type="submit" class="btn btn-primary">Create Subject</button>
      </form>
    <% end %>
  </div>
</div>