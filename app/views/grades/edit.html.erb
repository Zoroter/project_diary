<h1 class="mt-4 text-center"> Edit grade for <b><%= Student.find(params[:student_id]).full_name%></b> Student </h1>

<div class="container mt-5">
  <div class="jumbotron bg-dark text-white">
    <%= form_for @grade do |f| %>

      <form>
        <div class="form-group row justify-content-md-center">
          <%= f.label :value, class: "col-2" %>
          <%= f.text_field :value, class: "col-2" %>
          <div class="col-1"></div>
          <%= f.label :weight, class: "col-2" %>
          <%= f.text_field :weight, class: "col-2" %>
        </div>
        <div class="form-group row justify-content-md-center">
          <%= f.label "comments", class: "col-2" %>
          <%= f.text_field :comments, class: "col-7" %>
        </div>
        <%= hidden_field_tag(:student_id, params[:student_id]) %>
        <%= hidden_field_tag(:subject_id, params[:subject_id]) %>
        <div class="text-center"> <%= f.submit "Submit", class:"btn btn-light w-25 mt-4"%> </div> 
    </form>
  <% end %>
  </div>
</div>