<div class="container mt-5">
  <div class="jumbotron jumbotron-fluid w-50 mx-auto">
    <div class="form-group row">
      <div class="col-2"></div>
        <h3><%="#{@user.name} #{@user.sname} #{@user.surname}" %></h3>
    </div>
    <div class="form-group row">
      <div class="col-1"></div>
      email: <%=@user.email%>
    </div>
    <div class="form-group row">
      <div class="col-1"></div>
      Birthdate: <%=@user.birth_date%>
    </div>
    <div class="form-group row">
      <div class="col-1"></div>
      Personal ID Number: <%=@user.pin%>
    </div>
    <div class="form-group row">
      <div class="col-1"></div>
      SEX: <%="MAN" if @user.is_man == true %> <%="WOMAN" if @user.is_man==false%>
    </div>
    
    
  </div>
</div>